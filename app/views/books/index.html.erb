<p id="notice"><%= flash[:notice] %></p>

<h1>All Books</h1>

<p>
<%= link_to 'Create Book', new_book_path %> |
<%= link_to "Home", root_path %>    
</p>

<table>
  <thead>
      <tr>
          <th><%=  'Spell Count' %></th>
          <th><%=  'Name' %></th>
          <th colspan="2"></th>
      </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %> 
      <tr>
        <td><%= book.spell_count %></td>
        <td><%= link_to book.name, book %></td>
        <td><%= form_with model: book, method: :delete, local: true do |del| %>
            <%= del.submit 'Delete Book' %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

